<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.MenuController">
   <center>
      <VBox alignment="CENTER">
         <children>
            <Label fx:id="title" text="Puissance 4" />
            <Button fx:id="rankingBtn" mnemonicParsing="false" onAction="#onClickRankingButton" text="Classement">
               <VBox.margin>
                  <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
               </VBox.margin></Button>
            <Button fx:id="2" mnemonicParsing="false" onAction="#onClickPlayerNumberChoice" text="2 joueurs">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
            <Button fx:id="3" mnemonicParsing="false" onAction="#onClickPlayerNumberChoice" text="3 joueurs">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
            <Button fx:id="4" mnemonicParsing="false" onAction="#onClickPlayerNumberChoice" text="4 joueurs">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
            <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#onClickExit" text="Quitter">
               <VBox.margin>
                  <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </center>
</BorderPane>
